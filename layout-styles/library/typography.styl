
// Typography

html, body
  color coal
  font-family 'Open Sans', sans-serif
  font-weight normal
  //line-height 1.7
  word-wrap break-word

h1
  font-family 'Open Sans', sans-serif
  font-size 4.25em

h2
  font-family 'Open Sans', sans-serif
  font-size 2.25em

h3
  font-family 'Open Sans', sans-serif
  font-size 1.913em

h4
  font-family 'Open Sans', sans-serif
  font-size 1.627em

h5
  font-family 'Open Sans', sans-serif
  font-size 1.383em

h6
  font-family 'Open Sans', sans-serif
  font-size 1.176em

h1, h2, h3, h4, h5, h6
  line-height 1.1em
  margin 1em 0 0 0

p
  margin 1em 0

ul
  padding-left 2em

ul li
  list-style-type circle

a
  color steel
  font-family 'Open Sans'
  font-weight normal
  text-decoration none
  transition .75s

a:link
  color steel
a:visited
  color steel
a:hover
  color coal
a:active
  color coal
a:focus
  color coal

strong
  color black

em
  font-style italic

h1, h2, h3, h4, h5, h6, p, blockquote, span
  hanging-punctuation first

blockquote
  position relative
  margin 2em 1em
  padding-left 3.75em
  font-style italic

blockquote::before
  content 'â€œ'
  position absolute
  left -.2em
  color coal
  font-family 'Open Sans'
  font-weight normal
  line-height 1em
  font-size 8em

.italic
  font-style italic

.bold
  color black

.coal
  color coal

.cloud
  color cloud

.red
  color red

.grey
  color grey

.center
  text-align center
  margin-right auto
  margin-left auto

.left
  text-align left

.right
  text-align right

.justify
  text-align justify

::-moz-selection
  background red
  color white
::selection
  background red
  color white

.clearfix:after
  visibility hidden
  display block
  font-size 0
  content " "
  clear both
  height 0

